{
    "name": "__MSG_appName__",
    "version": "0.2.4",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "permissions": [
        "http://*.kijiji.ca/",
        "http://*.lespac.com/"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://*.kijiji.ca/*",
                "http://*.lespac.com/*"
            ],
            "css": [
                "styles/main.css"
            ],
            "js": [
                "scripts/contentscript.js"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ],
    "web_accessible_resources": [
        "scripts/kijiji/all.js",
        "stylesheets/kijiji/all.css",
        "scripts/lespac/all.js",
        "stylesheets/lespac/all.css"
    ]
}